[build-system]
requires = ["setuptools"]
build-backend = "setuptools.build_meta"

[project]
name = "py-qgis-metrics"
description = "Metrics handler for py-qgis-server2"
requires-python = ">= 3.10"
classifiers = [
    "Programming Language :: Python :: 3.10",
    "Programming Language :: Python :: 3.11",
    "Operating System :: POSIX",
]
dependencies = [
    "py-qgis-contrib==${PIN_VERSION}",
    "py-qgis-http==${PIN_VERSION}",
    "py-amqp-client>=2.0.0"
]
version = "${PIN_VERSION}"

[project.entry-points.'3liz.org.map.metrics.handler']
amqp = 'py_qgis_metrics.amqp:register'

[[project.authors]]
name = "David Marteau"
email = "dmarteau@3liz.org"

[tool.ruff]
extend = "../../config/ruff.toml"

[tool.ruff.lint.per-file-ignores]
"tests/*" = ["T201"]
